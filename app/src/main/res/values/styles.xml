<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#fcf3d1</item>
        <item name="colorControlActivated">#fcf3d1</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">3</item>
        <item name="android:max">5</item>
        <item name="android:stepSize">0.1</item>

    </style>

    <style name="RatingBarGold" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffb700</item>
        <item name="colorControlActivated">#ffb700</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">3</item>
        <item name="android:max">5</item>
        <item name="android:stepSize">0.1</item>

    </style>
</resources>
