<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:weightSum="1">

    <!--The navigation drawer-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".725"
        android:orientation="vertical"
        android:background="#086848"
        android:id="@+id/menuLinearLayout">

        <!-- Profile Box -->
        <LinearLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/tv_emailMenuItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="EMAIL"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>

        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/outline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:text="Followed Professors"
            android:id="@+id/followedProfMenuItem"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/outline"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:text="Suggest A Professor"
            android:id="@+id/suggestProfMenuItem"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/outline"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Change Password"
            android:textColor="@android:color/white"
            android:id="@+id/changePassMenuItem"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/outline"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:text="Logout"
            android:id="@+id/logoutMenuItem"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/outline"/>
    </LinearLayout>
</LinearLayout>